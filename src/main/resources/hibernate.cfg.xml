<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/registration_db?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">77331100</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="model.Student" />
        <mapping class="model.Faculty" />
        <mapping class="model.Course" />
        <mapping class="model.Section" />
        <mapping class="model.Registration" />

    </session-factory>
</hibernate-configuration>
 